require "runfile-exec"
require "run-gem-dev"

name     "PunditExtra Dev Tools"
summary  "Utilities for the gem developer"
version  PunditExtra::VERSION

help    "Start the rails server"
action  :server, :s do
  run "rackup"
end

# And finally, add all the `run gem *` tasks and `run spec` tasks
RunGemDev::gem_tasks 'pundit_extra'
RunGemDev::rspec_tasks